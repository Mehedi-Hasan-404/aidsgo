rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /channels/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /live_events/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
